@model IEnumerable<EmprestimoModel>

<div class="container"> 
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Emprestimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-plus-circle"></i> Cadastrar novo emprestimo</a>
    </div>


    @if (TempData["MessagemSucesso"] != null)
    {
        <div class="alert-success text-light" role="alert">
            @TempData["MessagemSucesso"]
        </div>
    }
    @if (TempData["MessagemErro"] != null)
    {
        <div class="alert-danger text-light" role="alert">
            @TempData["MessagemErro"]
        </div>
    }


<table id="Emprestimos" class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">Ultima Atualizacao</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var emprestimo in Model)
            {
                <tr>
                    <td>@emprestimo.Id</td>
                    <th scope="row">@emprestimo.Recebedor</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualizacao</td>
                    <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2"><i class="bi bi-pen-fill"></i> Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Excluir</a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
</div>